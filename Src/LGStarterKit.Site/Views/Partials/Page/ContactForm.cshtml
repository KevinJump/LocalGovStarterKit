@inherits Umbraco.Web.Mvc.UmbracoViewPage<LGStarterKit.Contact.ContactViewModel>

@{ 
    var title = Umbraco.GetDictionaryValue("Contact.Email");
    if (string.IsNullOrEmpty(title))
    {
        title = "Online";
    }
}

@using (Html.BeginUmbracoForm<LGStarterKit.Contact.ContactFormSurfaceController>(
                                                            "SendContactEmail",
                                                            null,
                                                            new { @class = "form-horizontal" }))
{

    <fieldset>
        <legend>@title</legend>

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Message, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextAreaFor(x => x.Message, 10, 50, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Message)
            </div>
        </div>

        @Html.HiddenFor(x => x.ToAddress)

        <div class="col-sm-9 col-sm-offset-3">
            <input type="submit" class="btn btn-lg btn-primary" value="send" />
        </div>
    </fieldset>
}
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "SystemPages.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        @Umbraco.RenderMacro("ezSearch",
                     new
                     {
                         hideFromSearchField = "umbracoNaviHide",
                         indexType = "BOTH",
                         pageSize = "10",
                         previewFields = "bodyText, content,summary",
                         previewLength = "175",
                         rootContentNodeId = "",
                         rootMediaNodeId = "",
                         searchFields = "title, bodyText",
                         searchFormLocation = "NONE"
                     })
    </div>
</div>

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "Sections.cshtml";
}

@section PageHeader {
    <div class="intro">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-xs-12">
                    <h1>@Umbraco.Field("title")</h1>
                    <div>
                        @CurrentPage.GetGridHtml("content", "lgsk-nested-bootstrap")
                    </div>
                </div>
                <div class="col-sm-4 hidden-xs">
                    @Html.Partial("Components/Highlights")
                </div>
            </div>
        </div>
    </div>
}

<div class="section-links">
    @Html.Partial("Nav/GatewayLinks")
</div>


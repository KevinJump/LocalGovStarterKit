<?xml version="1.0" encoding="utf-8"?>
<macro>
  <name>ezSearch</name>
  <alias>ezSearch</alias>
  <scriptType></scriptType>
  <scriptAssembly></scriptAssembly>
  <scriptingFile>~/Views/MacroPartials/ezSearch.cshtml</scriptingFile>
  <xslt></xslt>
  <useInEditor>False</useInEditor>
  <dontRender>False</dontRender>
  <refreshRate>0</refreshRate>
  <cacheByMember>False</cacheByMember>
  <cacheByPage>False</cacheByPage>
  <properties>
    <property name="Field that flags whether page should be hidden from results" alias="hideFromSearchField" sortOrder="0" propertyType="Umbraco.Textbox" />
    <property name="Type of content to search for (CONTENT, MEDIA, BOTH)" alias="indexType" sortOrder="0" propertyType="Umbraco.Textbox" />
    <property name="Number of results to show per page" alias="pageSize" sortOrder="0" propertyType="Umbraco.Integer" />
    <property name="Fields to show as the result preview" alias="previewFields" sortOrder="0" propertyType="Umbraco.Textbox" />
    <property name="Maximum length of the preview text" alias="previewLength" sortOrder="0" propertyType="Umbraco.Integer" />
    <property name="Root content node to search from" alias="rootContentNodeId" sortOrder="0" propertyType="Umbraco.ContentPickerAlias" />
    <property name="Root media node to search from" alias="rootMediaNodeId" sortOrder="0" propertyType="Umbraco.MediaPicker" />
    <property name="Fields to search against" alias="searchFields" sortOrder="0" propertyType="Umbraco.Textbox" />
    <property name="Location of the search form (TOP, BOTTOM, BOTH, NONE)" alias="searchFormLocation" sortOrder="0" propertyType="Umbraco.Textbox" />
  </properties>
</macro>